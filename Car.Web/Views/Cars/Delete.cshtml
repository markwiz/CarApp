@model Car.Core.Dto.CarDto

@{
    ViewData["Title"] = "Delete Car";
}

<h1>Delete Car</h1>

<p>Are you sure you want to delete this car?</p>

<dl class="row">
    <dt class="col-sm-2">Make</dt>
    <dd class="col-sm-10">@Model.Make</dd>

    <dt class="col-sm-2">Model</dt>
    <dd class="col-sm-10">@Model.Model</dd>

    <dt class="col-sm-2">Year</dt>
    <dd class="col-sm-10">@Model.Year</dd>

    <dt class="col-sm-2">Vin</dt>
    <dd class="col-sm-10">@Model.Vin</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancel</a>
</form>
